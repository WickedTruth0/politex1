
#include <bitset>
#include <string>
#include <iostream>

int main()
{

 long long int a=260;
 long long int c= a*a*a*a; // Увеличиваем диапозон целочисленных чисел,что бы мы могли возвести 260^4  и нам хватило диапозона.
long long int d = c*a*a*a*a; // Увеличиваем диапозон целочисленных чисел,что бы мы могли возвести 260^8 и нам хватило диапозона.
 char f= 'a'; // создаем переменную "f" и даем ей значения символа "а" ;
 std::cout << "a^4=" << c << std::endl; // выводим значение "а^4" ;
   std::cout << "a^8=" << d<<std::endl ; //выводим значение "а^8";
  std::cout << "a+53=" << f+53 <<std::endl;//выводим значение суммы символа"а" + 53;
  std::cout << "37+a=" << 37+f <<std::endl;//выводим значение суммы символа 37 + "а" ;
  // Далее по очереди выводим длину типов данных
  std::cout << "Длина типа данных double="<<sizeof(double) <<" байт" <<std::endl; 
 std::cout << "Длина типа данных int="<<sizeof(int) <<" байт" <<std::endl;
 std::cout << "Длина типа данных bool="<<sizeof(bool) <<" байт" <<std::endl;
 std::cout << "Длина типа данных char="<<sizeof(char) <<" байт" <<std::endl;
  return 0;
}
